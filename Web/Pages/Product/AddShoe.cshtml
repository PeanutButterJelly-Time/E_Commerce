@page
@model Web.Pages.Product.ProductModel
@{Layout = "_Layout";
}

<form method="post">
    <div class="form-group">
        <label asp-for="Input.Name"></label>
        <input asp-for="Input.Name" class="form-control" />
        <span asp-validation-for="Input.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Manufacturer"></label>
        <input asp-for="Input.Manufacturer" class="form-control" />
        <span asp-validation-for="Input.Manufacturer" class="text-danger"></span>
    </div>
    <label>
        <input type="checkbox" name="addAnother" value="true" />
        Check here to add another shoe.
    </label>
    <button type="submit" class="btn btn-primary">Add</button>
</form>